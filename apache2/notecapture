<VirtualHost *:80>
    ServerName localhost

    #WSGIDaemonProcess yourapplication user=user1 group=group1 threads=5
    WSGIScriptAlias /note-capture /var/www/notecapture/notecapture.wsgi

    <Directory /var/www/notecapture>
        #WSGIProcessGroup yourapplication
        #WSGIApplicationGroup %{GLOBAL}
        Order deny,allow
        Allow from all

        AuthType Basic
        AuthName "hello"
        AuthUserFile /home/mu/public_html/sec/.htpasswd
        Require valid-user
    </Directory>
</VirtualHost>

# vim: ft=apache
