<VirtualHost *:80>
    ServerName localhost

    #WSGIDaemonProcess yourapplication user=user1 group=group1 threads=5
    WSGIScriptAlias /note-capture /var/www/note-capture/note-capture.wsgi

    <Directory /var/www/>
        #WSGIProcessGroup yourapplication
        #WSGIApplicationGroup %{GLOBAL}
        Order deny,allow
        Allow from all

        AuthType Basic
        AuthName "hello"
        AuthUserFile /home/mu/Projekte/.htpasswd
        Require valid-user
    </Directory>
</VirtualHost>

